<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/default_background"
    android:orientation="vertical">

    <org.nervos.neuron.custom.TitleBar
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/colorPrimary"
        app:title="关于我们"
        app:isShowLeft="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginTop="@dimen/default_margin">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/app_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/wallet_photo"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/default_gray_d5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textColor="@color/default_black"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/app_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:textSize="14sp"
            android:textColor="@color/default_black"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>


    <TextView
        android:id="@+id/setting_source_code"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawableEnd="@drawable/arrow"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/default_margin"
        android:paddingStart="@dimen/default_margin"
        android:paddingEnd="@dimen/default_margin"
        android:background="@color/white"
        android:text="源代码"
        android:textSize="16sp"
        android:textColor="@color/font_black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="@dimen/default_margin"
        android:background="@color/default_gray_c"/>


    <TextView
        android:id="@+id/service_list"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:drawableEnd="@drawable/arrow"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/default_margin"
        android:paddingEnd="@dimen/default_margin"
        android:background="@color/white"
        android:text="服务与隐私条款"
        android:textSize="16sp"
        android:textColor="@color/font_black"/>

</LinearLayout>